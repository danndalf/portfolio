#!/usr/bin/env ruby

### COMPILATION RULES

# Donâ€™t filter or layout assets
compile %r{^/(favicon|robots|crypto/.*|stylesheets/.*|javascripts/.*|plugins/.*|fonts/.*|images/.*|photos/.*)/$} do
end

compile '/' do
  filter :erb
  layout 'default'
end

# Sitemap, RSS feed, and htaccess get filtered with erb, but get no layout.
compile %r{^/(sitemap|htaccess|feed|card)/$} do
  filter :erb
end

compile '*' do
  case item[:extension]
    when 'md'
      filter :rdiscount
    when 'html'
      filter :erb
  end
  layout 'default'
end

route '/photos/*/', :rep => :thumbnail do
  item.identifier.chop + '-thumbnail.' + item[:extension]
end

route %r{^/(favicon|robots|sitemap|crypto/.*|stylesheets/.*|javascripts/.*|plugins/.*|fonts/.*|images/.*|photos/.*)/$} do
  ext = item[:extension]
  item.identifier.chop + '.' + ext
end

route '*' do
  item.identifier + 'index.html'
end

layout '*', :erb
